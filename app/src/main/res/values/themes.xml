<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Quotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/indigo</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/quotes_font</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>
    <style name="Theme.Quotes.Splash" parent="Theme.MaterialComponents.NoActionBar"/>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_bottom_sheet</item>
    </style>
</resources>